{
  "name": "@rempel/n8n-nodes-oracle",
  "version": "1.0.9",
  "description": "Oracle Database connector for n8n",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "n8n-nodes-oracle",
    "Oracle",
    "Database",
    "DB",
    "SQL",
    "client",
    "community"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://rempel.github.io/n8n-oracle-connector/#/",
  "author": {
    "name": "Gabriel Rempel",
    "email": "rempel@hidev.cc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rempel/n8n-oracle-connector.git"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@10.12.1",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "pnpm build && pnpm lint -c .eslintrc.prepublish.js nodes credentials package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/OracleApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Oracle/Oracle.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/oracledb": "^6.6.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^5.0.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "oracledb": "^6.8.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
